pipeline {
    agent { docker 'jlrigau/maven-git' } 
    stages {
        stage('Example Build') {
            steps {
                 sh 'mvn --version'
                sh 'java -version'
                sh 'git --version'
                sh 'python --version'
                sh 'mkdir work'
                sh 'cd work'
                sh 'git clone git@github.com:rihou/hello.git'
                sh 'ls -al'
            }
        }
    }
}